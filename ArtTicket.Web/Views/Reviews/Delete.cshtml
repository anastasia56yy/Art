@model ArtTicket.Domain.Models.Review
@{
    ViewBag.Title = "Удаление отзыва - ArtTicket Moldova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .review-delete-header {
        background: linear-gradient(45deg, #6a3093, #a044ff);
        padding: 40px 0;
        margin-bottom: 40px;
        color: white;
        text-align: center;
    }

    .review-delete-title {
        font-weight: 700;
        margin-bottom: 15px;
    }

    .review-delete-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 30px;
    }

    .alert-delete {
        background-color: rgba(255, 58, 58, 0.1);
        border-left: 4px solid #ff3a3a;
        padding: 15px;
        margin-bottom: 20px;
        color: #dc3545;
    }

    .event-details {
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .event-title {
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
    }

    .event-info {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .review-details {
        margin-bottom: 20px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
    }

    .star-rating {
        color: #ffc107;
        margin-bottom: 15px;
    }

    .review-date {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .review-comment {
        color: #333;
    }

    .btn-delete, .btn-cancel {
        color: white;
        border: none;
    }

    .btn-delete {
        background: linear-gradient(45deg, #cb2d3e, #ef473a);
    }

    .btn-delete:hover {
        background: linear-gradient(45deg, #b82835, #d64033);
        color: white;
    }

    .btn-cancel {
        background: linear-gradient(45deg, #7b7b7b, #a5a5a5);
    }

    .btn-cancel:hover {
        background: linear-gradient(45deg, #6d6d6d, #949494);
        color: white;
    }
</style>

<section class="review-delete-header">
    <div class="container">
        <h1 class="review-delete-title">Удаление отзыва</h1>
        <p>Вы собираетесь удалить свой отзыв о мероприятии</p>
    </div>
</section>

<div class="container">
    <div class="review-delete-card">
        <div class="alert-delete">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Внимание!</strong> Вы уверены, что хотите удалить этот отзыв? Это действие нельзя будет отменить.
        </div>

        <div class="event-details">
            <h3 class="event-title">@Model.Event.Title</h3>
            <div class="event-info">
                <p>
                    <i class="fas fa-map-marker-alt me-2"></i> @Model.Event.Venue.Name
                </p>
                <p>
                    <i class="fas fa-calendar-alt me-2"></i> @Model.Event.StartDate.ToString("dd.MM.yyyy HH:mm")
                </p>
            </div>
        </div>

        <div class="review-details">
            <div class="review-date">
                <i class="fas fa-calendar-alt me-1"></i> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
            </div>
            <div class="star-rating">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="fas @(i <= Model.Rating ? "fa-star" : "fa-star-o")"></i>
                }
            </div>
            <p class="review-comment">@Model.Comment</p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("MyReviews", "Reviews")" class="btn btn-cancel">
                    <i class="fas fa-arrow-left me-2"></i> Отмена
                </a>
                <button type="submit" class="btn btn-delete">
                    <i class="fas fa-trash-alt me-2"></i> Удалить отзыв
                </button>
            </div>
        }
    </div>
</div> 