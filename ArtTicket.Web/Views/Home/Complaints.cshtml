@{
    ViewBag.Title = "Жалобы - ArtTicket Moldova";
}

<style>
    .hero-mini {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), 
        url('https://images.unsplash.com/photo-1570872626485-d8ffea69f463?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center/cover;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }
    
    .complaints-section {
        padding: 80px 0;
        background-color: #f8f9fa;
    }
    
    .complaints-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 30px;
    }
    
    .form-label {
        font-weight: 600;
        color: #343a40;
        margin-bottom: 8px;
    }
    
    .custom-file-upload {
        border: 2px dashed #ddd;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
        background-color: #f9f9f9;
    }
    
    .custom-file-upload:hover {
        border-color: #7952b3;
        background-color: #f3f0f7;
    }
    
    .custom-file-upload i {
        font-size: 2rem;
        color: #7952b3;
        margin-bottom: 10px;
    }
    
    .form-floating label {
        color: #6c757d;
    }
    
    .file-list {
        list-style: none;
        padding: 0;
        margin-top: 15px;
    }
    
    .file-list li {
        display: flex;
        align-items: center;
        padding: 8px 12px;
        margin-bottom: 8px;
        background-color: #f8f9fa;
        border-radius: 4px;
    }
    
    .file-list li i {
        color: #7952b3;
        margin-right: 10px;
    }
    
    .file-list .file-remove {
        margin-left: auto;
        color: #dc3545;
        cursor: pointer;
    }
    
    .upload-progress {
        height: 6px;
        margin-top: 5px;
    }
    
    .complaint-types {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 1rem;
    }
    
    .complaint-type {
        flex: 1 0 calc(33.333% - 10px);
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .complaint-type:hover {
        border-color: #7952b3;
        background-color: #f3f0f7;
    }
    
    .complaint-type.active {
        border-color: #7952b3;
        background-color: #f3f0f7;
    }
    
    .complaint-type i {
        font-size: 2rem;
        color: #7952b3;
        margin-bottom: 10px;
        display: block;
    }
    
    .complaint-type h5 {
        font-size: 1rem;
        margin-bottom: 8px;
        color: #343a40;
    }
    
    .complaint-type p {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 0;
    }
    
    .faq-section {
        margin-top: 30px;
    }
    
    .contact-options {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 20px;
    }
    
    .contact-option {
        flex: 1 0 calc(50% - 15px);
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #333;
        transition: all 0.3s;
    }
    
    .contact-option:hover {
        background: #e9ecef;
    }
    
    .contact-option i {
        font-size: 1.5rem;
        margin-right: 10px;
        color: #7952b3;
    }
    
    .contact-option p {
        margin: 0;
        font-weight: 500;
    }
    
    .btn-gradient {
        background: linear-gradient(45deg, #6a3093, #a044ff);
        border: none;
        color: white;
        font-weight: 600;
    }
    
    .btn-gradient:hover {
        background: linear-gradient(45deg, #5b2982, #9035ee);
        color: white;
    }
</style>

<!-- Мини-баннер -->
<header class="hero-mini">
    <div class="container">
        <h1>Жалобы и предложения</h1>
        <p>Мы ценим ваше мнение и готовы помочь решить любые проблемы</p>
    </div>
</header>

<!-- Основной контент -->
<section class="complaints-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Форма жалобы -->
                <div class="complaints-card">
                    <h2>Подать жалобу или предложение</h2>
                    <p class="mb-4">Заполните форму ниже, чтобы сообщить о проблеме или поделиться идеей по улучшению наших услуг. Мы рассмотрим ваше обращение в течение 24 часов.</p>
                    
                    <form id="complaintForm">
                        <div class="mb-4">
                            <label class="form-label">Выберите тип обращения</label>
                            <div class="complaint-types">
                                <div class="complaint-type active" data-type="complaint">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <h5>Жалоба</h5>
                                    <p>Сообщить о проблеме с сайтом, билетами или организацией мероприятия</p>
                                </div>
                                <div class="complaint-type" data-type="suggestion">
                                    <i class="bi bi-lightbulb"></i>
                                    <h5>Предложение</h5>
                                    <p>Поделиться идеей по улучшению сервиса или функционала платформы</p>
                                </div>
                                <div class="complaint-type" data-type="refund">
                                    <i class="bi bi-arrow-return-left"></i>
                                    <h5>Возврат</h5>
                                    <p>Проблемы, связанные с возвратом билетов или оплаты</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label for="fullName" class="form-label">Ваше имя</label>
                                <input type="text" class="form-control" id="fullName" placeholder="Введите ваше полное имя">
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Электронная почта</label>
                                <input type="email" class="form-control" id="email" placeholder="example@mail.com">
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="orderNumber" class="form-label">Номер заказа (если применимо)</label>
                            <input type="text" class="form-control" id="orderNumber" placeholder="Например: AT-12345">
                        </div>
                        
                        <div class="mb-4">
                            <label for="eventInfo" class="form-label">Мероприятие</label>
                            <select class="form-select" id="eventInfo">
                                <option selected>Выберите мероприятие (если применимо)</option>
                                <option value="1">Концерт группы "Океан Эльзы"</option>
                                <option value="2">Спектакль "Мастер и Маргарита"</option>
                                <option value="3">Фестиваль Moldova Wine Day</option>
                                <option value="4">Стендап шоу "Комеди Клаб"</option>
                                <option value="5">Выставка современного искусства</option>
                                <option value="6">Другое мероприятие</option>
                            </select>
                        </div>
                        
                        <div class="mb-4">
                            <label for="complaintMessage" class="form-label">Описание жалобы/предложения</label>
                            <textarea class="form-control" id="complaintMessage" rows="5" placeholder="Опишите подробно вашу проблему или предложение..."></textarea>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">Прикрепить файлы (опционально)</label>
                            <div class="custom-file-upload" id="fileUploadArea">
                                <i class="bi bi-cloud-arrow-up"></i>
                                <p>Перетащите файлы сюда или кликните для выбора</p>
                                <p class="text-muted small">Максимальный размер файла 5MB (JPG, PNG, PDF)</p>
                                <input type="file" id="fileInput" class="d-none" multiple>
                            </div>
                            
                            <ul class="file-list" id="fileList">
                                <!-- Прикрепленные файлы будут отображаться здесь -->
                            </ul>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="privacyConsent" required>
                            <label class="form-check-label" for="privacyConsent">
                                Я согласен с <a href="#">политикой конфиденциальности</a> и даю разрешение на обработку моих персональных данных
                            </label>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-gradient btn-lg">Отправить обращение</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="col-lg-4">
                <!-- Информация и FAQ -->
                <div class="complaints-card">
                    <h3>Как мы обрабатываем обращения</h3>
                    <p>Все жалобы и предложения рассматриваются нашей командой поддержки в течение 24 часов с момента получения. Мы стремимся решить каждую проблему максимально оперативно и эффективно.</p>
                    
                    <div class="d-flex align-items-center mt-4 mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="bi bi-envelope-check text-primary fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Подтверждение</h5>
                            <p class="mb-0 text-muted small">Автоматическое подтверждение о получении вашего обращения</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="bi bi-search text-primary fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Рассмотрение</h5>
                            <p class="mb-0 text-muted small">Анализ проблемы и поиск оптимального решения</p>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="bi bi-check2-circle text-primary fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Решение</h5>
                            <p class="mb-0 text-muted small">Предоставление решения и обратная связь</p>
                        </div>
                    </div>
                    
                    <div class="border-top pt-4 faq-section">
                        <h4>Часто задаваемые вопросы</h4>
                        
                        <div class="accordion mt-3" id="faqAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                        Как долго рассматривается жалоба?
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Стандартное время рассмотрения обращения составляет до 24 часов. Для сложных случаев срок может быть увеличен до 3 рабочих дней, о чем вы будете уведомлены дополнительно.
                                    </div>
                                </div>
                            </div>
                            
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        Можно ли подать жалобу анонимно?
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Мы принимаем анонимные обращения, однако для получения обратной связи и решения вашей проблемы рекомендуем указать контактные данные. Вся информация обрабатывается в соответствии с нашей политикой конфиденциальности.
                                    </div>
                                </div>
                            </div>
                            
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        Что делать, если моя проблема не решена?
                                    </button>
                                </h2>
                                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Если предложенное решение вас не устраивает, вы можете запросить эскалацию вашего обращения руководству компании. Для этого ответьте на полученное от нас письмо с указанием "Требуется эскалация" в теме письма.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Контактная информация -->
                <div class="complaints-card">
                    <h3>Другие способы связи</h3>
                    <p>Вы также можете связаться с нами одним из следующих способов:</p>
                    
                    <div class="contact-options">
                        <a href="tel:+37322123456" class="contact-option">
                            <i class="bi bi-telephone-fill"></i>
                            <p>+373 (22) 123-456</p>
                        </a>
                        
                        <a href="mailto:support@artticket.md" class="contact-option">
                            <i class="bi bi-envelope-fill"></i>
                            <p>support@artticket.md</p>
                        </a>
                        
                        <a href="#" class="contact-option">
                            <i class="bi bi-chat-dots-fill"></i>
                            <p>Онлайн-чат</p>
                        </a>
                        
                        <a href="#" class="contact-option">
                            <i class="bi bi-whatsapp"></i>
                            <p>WhatsApp</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Обработка выбора типа жалобы
            const complaintTypes = document.querySelectorAll('.complaint-type');
            complaintTypes.forEach(type => {
                type.addEventListener('click', function() {
                    // Удаляем активный класс у всех типов
                    complaintTypes.forEach(t => t.classList.remove('active'));
                    // Добавляем активный класс выбранному типу
                    this.classList.add('active');
                });
            });
            
            // Обработка загрузки файлов
            const fileUploadArea = document.getElementById('fileUploadArea');
            const fileInput = document.getElementById('fileInput');
            const fileList = document.getElementById('fileList');
            
            fileUploadArea.addEventListener('click', function() {
                fileInput.click();
            });
            
            fileInput.addEventListener('change', function() {
                handleFiles(this.files);
            });
            
            fileUploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                fileUploadArea.classList.add('border-primary');
            });
            
            fileUploadArea.addEventListener('dragleave', function() {
                fileUploadArea.classList.remove('border-primary');
            });
            
            fileUploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                fileUploadArea.classList.remove('border-primary');
                handleFiles(e.dataTransfer.files);
            });
            
            function handleFiles(files) {
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    const fileSize = (file.size / 1024 / 1024).toFixed(2); // в МБ
                    
                    // Проверка размера файла
                    if (fileSize > 5) {
                        alert(`Файл ${file.name} слишком большой. Максимальный размер 5MB.`);
                        continue;
                    }
                    
                    // Создание элемента списка для файла
                    const li = document.createElement('li');
                    li.innerHTML = `
                        <i class="bi bi-paperclip"></i>
                        <span>${file.name} (${fileSize} MB)</span>
                        <span class="file-remove"><i class="bi bi-x-circle"></i></span>
                    `;
                    
                    // Добавление обработчика для удаления файла
                    const removeBtn = li.querySelector('.file-remove');
                    removeBtn.addEventListener('click', function() {
                        li.remove();
                    });
                    
                    fileList.appendChild(li);
                }
            }
            
            // Интерактивность аккордеона
            var accordionButtons = document.querySelectorAll('.accordion-button');
            
            accordionButtons.forEach(function(button) {
                button.addEventListener('click', function() {
                    var isExpanded = this.getAttribute('aria-expanded') === 'true';
                    this.setAttribute('aria-expanded', !isExpanded);
                    
                    var targetId = this.getAttribute('data-bs-target');
                    var targetElement = document.querySelector(targetId);
                    
                    if (targetElement) {
                        if (isExpanded) {
                            targetElement.classList.remove('show');
                        } else {
                            targetElement.classList.add('show');
                        }
                    }
                });
            });
        });
    </script>
} 