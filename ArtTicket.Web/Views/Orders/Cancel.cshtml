@model ArtTicket.Domain.Models.Order
@{
    ViewBag.Title = "Подтверждение отмены заказа #" + Model.Id + " - ArtTicket Moldova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .cancel-header {
        background: linear-gradient(45deg, #6a3093, #a044ff);
        padding: 40px 0;
        margin-bottom: 40px;
        color: white;
        text-align: center;
    }

    .cancel-title {
        font-weight: 700;
        margin-bottom: 15px;
    }

    .cancel-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 30px;
    }

    .warning-icon {
        color: #dc3545;
        font-size: 4rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .cancel-message {
        font-size: 1.1rem;
        margin-bottom: 30px;
    }

    .order-details {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .order-details-title {
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
    }

    .detail-row {
        display: flex;
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: 500;
        width: 200px;
        color: #666;
    }

    .detail-value {
        font-weight: 600;
        color: #333;
    }

    .ticket-card {
        background: linear-gradient(45deg, #6a3093, #a044ff);
        color: white;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 15px;
    }

    .ticket-title {
        font-weight: 600;
        margin-bottom: 10px;
    }

    .ticket-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .btn-back:hover {
        background-color: #5a6268;
        color: white;
    }
    
    .btn-confirm-cancel {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-confirm-cancel:hover {
        background-color: #c82333;
        color: white;
    }
</style>

<section class="cancel-header">
    <div class="container">
        <h1 class="cancel-title">Подтверждение отмены заказа #@Model.Id</h1>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="cancel-card">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                
                <div class="cancel-message text-center">
                    <h3>Вы уверены, что хотите отменить заказ?</h3>
                    <p>После отмены заказа билеты станут доступны для покупки другими пользователями.</p>
                </div>
                
                <div class="order-details">
                    <h3 class="order-details-title">Информация о заказе</h3>
                    
                    <div class="detail-row">
                        <span class="detail-label">Дата заказа:</span>
                        <span class="detail-value">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                    
                    <div class="detail-row">
                        <span class="detail-label">Статус заказа:</span>
                        <span class="detail-value">
                            @switch(Model.Status)
                            {
                                case "Pending":
                                    <span class="badge bg-warning">Ожидает оплаты</span>
                                    break;
                                case "Paid":
                                    <span class="badge bg-success">Оплачен</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger">Отменен</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </span>
                    </div>
                    
                    <div class="detail-row">
                        <span class="detail-label">Сумма заказа:</span>
                        <span class="detail-value">@Model.TotalAmount.ToString("N0") MDL</span>
                    </div>
                    
                    <div class="detail-row">
                        <span class="detail-label">Количество билетов:</span>
                        <span class="detail-value">@Model.Tickets.Count</span>
                    </div>
                </div>
                
                <h3 class="order-details-title">Билеты</h3>
                
                @foreach (var ticket in Model.Tickets)
                {
                    <div class="ticket-card">
                        <h4 class="ticket-title">@ticket.Event.Title</h4>
                        
                        <div class="ticket-info">
                            <span>Номер места:</span>
                            <span>@ticket.SeatNumber</span>
                        </div>
                        
                        <div class="ticket-info">
                            <span>Цена:</span>
                            <span>@ticket.Price.ToString("N0") MDL</span>
                        </div>
                    </div>
                }
                
                <div class="d-flex justify-content-center mt-4">
                    @using (Html.BeginForm("Cancel", "Orders", new { id = Model.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <a href="@Url.Action("Details", "Orders", new { id = Model.Id })" class="btn btn-back me-3">
                            <i class="fas fa-arrow-left me-2"></i> Вернуться
                        </a>
                        <button type="submit" class="btn btn-confirm-cancel">
                            <i class="fas fa-times me-2"></i> Подтвердить отмену
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 