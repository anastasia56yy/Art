@model IEnumerable<ArtTicket.Domain.Models.Venue>
@{
    ViewBag.Title = "Площадки - ArtTicket Moldova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .venues-header {
        background: linear-gradient(45deg, #6a3093, #a044ff);
        padding: 40px 0;
        margin-bottom: 40px;
        color: white;
        text-align: center;
    }

    .venues-title {
        font-weight: 700;
        margin-bottom: 15px;
    }

    .venues-wrapper {
        margin-bottom: 60px;
    }

    .venue-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        transition: transform 0.3s;
        height: 100%;
    }

    .venue-card:hover {
        transform: translateY(-5px);
    }

    .venue-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

    .venue-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .venue-info {
        padding: 20px;
        background-color: white;
    }

    .venue-name {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #333;
    }

    .venue-location {
        color: #666;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

    .venue-location i {
        color: #a044ff;
        margin-right: 8px;
    }

    .venue-capacity {
        color: #666;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

    .venue-capacity i {
        color: #a044ff;
        margin-right: 8px;
    }

    .venue-link {
        display: inline-block;
        background: linear-gradient(45deg, #6a3093, #a044ff);
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

    .venue-link:hover {
        background: linear-gradient(45deg, #5b2580, #8f35e3);
        color: white;
    }
</style>

<section class="venues-header">
    <div class="container">
        <h1 class="venues-title">Площадки мероприятий</h1>
        <p>Ознакомьтесь с площадками, где проходят наши мероприятия</p>
    </div>
</section>

<div class="container venues-wrapper">
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var venue in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="venue-card">
                        <div class="venue-image">
                            <img src="@(string.IsNullOrEmpty(venue.ImageUrl) ? "https://via.placeholder.com/600x400?text=No+Image" : venue.ImageUrl)" alt="@venue.Name">
                        </div>
                        <div class="venue-info">
                            <h3 class="venue-name">@venue.Name</h3>
                            <div class="venue-location">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@venue.City, @venue.Address</span>
                            </div>
                            <div class="venue-capacity">
                                <i class="fas fa-users"></i>
                                <span>Вместимость: @venue.Capacity человек</span>
                            </div>
                            <a href="@Url.Action("Details", "Venues", new { id = venue.Id })" class="venue-link">
                                <i class="fas fa-info-circle me-1"></i> Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-building" style="font-size: 4rem; color: #ddd; margin-bottom: 20px;"></i>
            <h3 class="text-muted">Площадки не найдены</h3>
            <p class="text-muted">В данный момент список площадок пуст.</p>
        </div>
    }
</div> 